{
  "manifest_version": 3,
  "name": "Double Slit URL Monitor",
  "version": "1.0",
  "description": "Monitor two URLs with a double slit icon indicator.",
  "permissions": ["storage", "alarms"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Checking..."
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}

