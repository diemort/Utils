{
  "manifest_version": 3,
  "name": "Bookmark All Tabs",
  "version": "1.0",
  "permissions": [
    "bookmarks",
    "tabs",
    "tabGroups",
    "windows",
    "storage",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Bookmark All Tabs",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}